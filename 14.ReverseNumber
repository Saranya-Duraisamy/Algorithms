/* Write a program to reverse a number*/
class Test {
    public int reverseNumber(int num){
        int rev_num = 0;
        while(num != 0){
            rev_num = (rev_num*10) + (num%10);
            num = num/10;
        }
        return rev_num;
    }

    public static void main(String args[]) {
        Test test = new Test();
        System.out.println(test.reverseNumber(86871));
        System.out.println(test.reverseNumber(1221));
    }
}
